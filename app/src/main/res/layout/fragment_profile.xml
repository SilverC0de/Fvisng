<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/body"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextLight"
            android:text="Profile" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:paddingTop="60dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical"
                android:background="@drawable/button_light">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/colorGrey"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_mail"
                        android:background="@color/colorOffwhite"
                        android:padding="12dp"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_margin="6dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:alpha=".8"
                    android:background="@color/colorAsh" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Surname"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/colorGrey"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@color/colorOffwhite"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:id="@+id/profile_surname"
                        android:layout_margin="6dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:alpha=".8"
                    android:background="@color/colorAsh" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other name"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/colorGrey"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorOffwhite"
                        android:padding="12dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        
                        android:id="@+id/profile_othername"
                        android:layout_margin="6dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:alpha=".8"
                    android:background="@color/colorAsh" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/colorGrey"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:id="@+id/profile_number"
                        android:gravity="center"
                        android:background="@drawable/edit"
                        android:textSize="15sp"
                        android:layout_margin="6dp"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/profile_toggle"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_transluscent"
                    style="?android:attr/borderlessButtonStyle" />
            </LinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:id="@+id/avatar"
                app:placeholderImage="@drawable/group_photo"
                app:roundAsCircle="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>