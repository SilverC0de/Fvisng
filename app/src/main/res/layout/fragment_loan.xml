<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/body">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please complete this form to proceed."
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/colorGrey" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facial Photograph"
                android:gravity="start"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorTextDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/camera"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/editor"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/oje"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/svg_invitation_sent"
                    android:scaleType="centerInside"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Take your picture"
                    android:gravity="center"
                    android:textColor="@color/colorTextHint"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/camerax"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/editor"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ojex"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/family_goal" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Take your ID card image(front)"
                    android:gravity="center"
                    android:textColor="@color/colorTextHint"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/cameray"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:layout_margin="8dp"
                android:background="@drawable/editor"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ojey"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/svg_vacation_goal" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Take your ID card image(back)"
                    android:gravity="center"
                    android:textColor="@color/colorTextHint"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:gravity="start"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorTextDark"/>
            <EditText
                android:id="@+id/loan_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editor"
                android:textSize="15sp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:hint="Address"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorTextDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relative Name"
                android:gravity="start"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorTextDark"/>


            <EditText
                android:id="@+id/loan_relative_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editor"
                android:textSize="15sp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:hint="Relative Name"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorTextDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relative phone Number"
                android:gravity="start"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorTextDark"/>

            <EditText
                android:id="@+id/loan_relative_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/editor"
                android:textSize="15sp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:hint="Relative Phone Name"
                android:maxLength="11"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorTextDark" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marital Status"
                android:gravity="start"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorTextDark"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editor"
                android:layout_margin="8dp"
                android:id="@+id/loan_marital" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employment status"
                android:gravity="start"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorTextDark"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editor"
                android:layout_margin="8dp"
                android:id="@+id/loan_employment" />


            <EditText
                android:id="@+id/loan_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editor"
                android:textSize="15sp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:hint="Company Name"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorTextDark" />
            <EditText
                android:id="@+id/loan_company_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editor"
                android:textSize="15sp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:hint="Employee name"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorTextDark" />

            <EditText
                android:id="@+id/loan_company_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/editor"
                android:textSize="15sp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:hint="Employee phone number"
                android:maxLength="11"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorTextDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="National ID number"
                android:gravity="start"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorTextDark"/>

            <EditText
                android:id="@+id/loan_nin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/editor"
                android:textSize="15sp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:hint="ID card number"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorTextDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly income"
                android:gravity="start"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorTextDark"/>

            <EditText
                android:id="@+id/loan_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/editor"
                android:textSize="15sp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_margin="8dp"
                android:paddingStart="8dp"
                android:hint="Monthly income"
                android:maxLength="11"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorTextDark" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@id/request"
        android:layout_centerInParent="true"
        android:id="@+id/loaner" />
    <TextView
        android:id="@+id/err"
        android:layout_above="@id/request"
        android:gravity="end"
        android:layout_marginEnd="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp" />
    <Button
        android:id="@+id/request"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_dark"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>